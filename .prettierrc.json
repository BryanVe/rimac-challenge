{
	"singleQuote": true,
	"jsxSingleQuote": true,
	"semi": false,
	"arrowParens": "avoid",
	"useTabs": true,
	"tabWidth": 2,
	"trailingComma": "none",
	"singleAttributePerLine": true,

	"importOrder": [
		"^react",
		"<THIRD_PARTY_MODULES>",
		"^[~/](?!.*[.]scss$)[./].*$",
		"^(?!.*[.]scss$)[./].*$",
		"^(?![./]).*.scss$",
		"^[./].*.scss$"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"plugins": ["@trivago/prettier-plugin-sort-imports"]
}
